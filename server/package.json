{
  "name": "redmine-server",
  "version": "1.0.0",
  "description": "Rendszerfejlesztés - Redmine - 3.Csapat - SERVER",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts --watch src",
    "devgen": "npm run generate && npm run dev",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "generate": "tsoa spec && tsoa routes",
    "watch": "npm run generate && concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KukkPeter/Redmine.git"
  },
  "author": "Kukk Péter, Regenye Tamás, Szűcs Gergely",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/KukkPeter/Redmine/issues"
  },
  "homepage": "https://github.com/KukkPeter/Redmine#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/swagger-ui-express": "^4.1.6",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "joi": "^17.12.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.2.0"
  }
}
